<Page x:Class="Baiko_TestPlatform.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Baiko_TestPlatform.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="107*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition Width="77"/>
            <ColumnDefinition Width="48"/>
            <ColumnDefinition Width="350*"/>
            <ColumnDefinition Width="289*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Логин" Grid.Row="1"  Grid.Column="1" />
        <Label Content="Пароль" Grid.Row="3" Grid.Column="1"  />

        <TextBox x:Name="TextBoxLogin" Grid.Column="3" Grid.Row="1" ToolTip="Введите логин" />
        <PasswordBox x:Name="PasswordBox" PasswordChar="*" ToolTip="Введите пароль" Grid.Row="3" Grid.Column="3" />

        <Button Content="Вход" x:Name="ButtonEnter" Click="ButtonEnter_Click"  ToolTip="Кнопка входа"  Grid.Row="5" Grid.Column="3" />
        <Button Content="Регистрация" x:Name="ButtonRegister" Click="ButtonRegister_Click" ToolTip="Кнопка регистрации" Grid.Row="6" Grid.Column="3"  />

    </Grid>
</Page>
