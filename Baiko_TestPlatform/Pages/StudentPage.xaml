<Page x:Class="Baiko_TestPlatform.Pages.StudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Baiko_TestPlatform.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Тестирование">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="94*"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="130*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="103.636"/>
            <ColumnDefinition Width="201.819"/>
            <ColumnDefinition Width="94.545"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="choice" Grid.Column="1" Grid.Row="1"  DisplayMemberPath="full_name" Grid.ColumnSpan="3" />
        <Button x:Name="start" Grid.Column="2" Grid.Row="3" Content="Начать тестирование" Click="start_Click"  />
    </Grid>
</Page>
