<Page x:Class="Baiko_TestPlatform.Pages.TeacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Baiko_TestPlatform.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="44"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="44"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="90*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Button x:Name="question" Grid.Row="1" Grid.Column="1" Content="Вопросы" Click="question_Click" />
        <Button x:Name="test_request" Grid.Row="1" Grid.Column="3" Content="Отчёты" Click="test_request_Click" />
        <Button x:Name="students" Grid.Row="1" Grid.Column="5" Content="Студенты" Click="students_Click" />
    </Grid>
</Page>
